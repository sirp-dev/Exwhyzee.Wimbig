@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<style>
    .register-wimbig input {
        background-color: #fff !important;
        border-color: #110e0e !important;
    }

    .dashboard-main-disc input.form-control {
        height: 45px;
        background-color: #fff !important;
        border-radius: 0px !important;
    }
</style>
<section class="ad-breadcrumb parallex">
    <div class="container page-banner">
        <div class="row">
            <div class="col-sm-6 col-md-6">
                <h1>Login <span style="font-size:12px;font-weight:900;">Login and start Playing.</span></h1>
            </div>
            <div class="col-sm-6 col-md-6">
                <ol class="breadcrumb pull-right flip flip">
                    <li><a href="#">Play Small... WinBig...</a></li>

                </ol>
            </div>
        </div>
    </div>
</section>
<section class="dashboard" style="background-color:#ffffff;">

    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <div class="dashboard-main-disc">

                <div class="login-box-inner">
                    <form method="post">

                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Input.UserName"></label>
                            <input asp-for="Input.UserName" class="form-control" />
                            <span asp-validation-for="Input.UserName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <label class="pull-right" style="font-size:12px !important;"><span style="border-bottom:1px solid #110e0e"> <a asp-page="/Account/ForgotPassword" asp-area="Identity">Forgotten password?</a></span></label>
                            <input asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="">
                                <input asp-for="Input.RememberMe" style="border:1px solid #110e0e;color:#110e0e;" />

                                <label asp-for="Input.RememberMe">
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                        </div>


                        <div class="row">
                            <div class="col-xs-12">
                                <button type="submit" class="btn btn-default col-xs-12" style="border-radius:0px !important;">Login</button>
                            </div>
                        </div>
                        <p>Don't have an account? <a asp-page="/Account/Register" asp-area="Identity">Create one</a></p>

                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-4"></div>
    </div>
</section>
<div class="clearfix"></div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
