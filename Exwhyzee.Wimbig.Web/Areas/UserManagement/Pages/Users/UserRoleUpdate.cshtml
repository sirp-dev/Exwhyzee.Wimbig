@page
@model Exwhyzee.Wimbig.Web.Areas.UserManagement.Pages.Users.UserRoleUpdateModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "User Role Asign";

    Layout = "~/Views/Shared/_SuperThemeBackLayout.cshtml";

}


<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel table-responsive">
            <div class="x_title">
                <h2>User Info (@Model.People.UserName) <span style="font-size:12px;"> @Model.People.FirstName  @Model.People.LastName </span></h2>


                <div class="clearfix"></div>
            </div>
            <div class="x_content table-responsive">


                <form class="form-horizontal form-label-left" method="post" novalidate>
                    <input asp-for="Input.UserId" value="@Model.LoggedInUser" type="hidden" name="Input.UserId">

                    <div class="">
                        @if (TempData["removeuser"] != null)
                        {
                            <div class="alert alert-warning alert-dismissible" role="alert">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                @TempData["removeuser"]
                            </div>
                        }
                        <div class="form-group">
                            <label class="col-form-label col-md-3">Role</label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <select class=form-control col-md-7 col-xs-12 asp-for="Input.RoleId" asp-items="@(new SelectList(Model.Roles, "Name", "Name"))">
                                    <option value="" disabled selected>Select a Role</option>

                                </select>
                                <span asp-validation-for="Input.RoleId" class="text-danger"></span>
                            </div>

                        </div>

                    </div>
                    <div class="ln_solid"></div>
                    <div class="form-group">
                        <div class="col-md-6 col-sm-6 col-xs-12">

                            <button type="submit" class="btn btn-success">Update Role</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
