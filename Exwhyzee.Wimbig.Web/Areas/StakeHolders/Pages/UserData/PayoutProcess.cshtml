@page
@model Exwhyzee.Wimbig.Web.Areas.StakeHolders.Pages.UserData.PayoutProcessModel
@{
}
<style>
    table tr, td, th {
        padding: 10px 20px;
        border: 1px solid #c4c1c1;
        text-align:center;
        vertical-align:central;
    }
    .table-responsive {
        overflow-x: visible !important;
    }
</style>

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel table-responsive">
            <div class="x_title">
                <h2>Wimbig Payout</h2>

                <div class="clearfix"></div>
            </div>
            <div class="table-responsive">
                @*@if (TempData["msg"] != null)
                {
                    <div class="alert alert-danger alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        @TempData["msg"]
                    </div>
                }*@
                <div class="row">
                    <div class="col-md-2"></div>
                    <div class="col-md-6">
                        <div class="row">
                            <div class="col-md-12">
                                <table style="width:100%;">
                                    <tr>
                                        <th colspan="2">Wimbig Payout Details</th>
                                    </tr>
                                    <tr>
                                        <th>Start Date</th>
                                        <th>End Date</th>
                                    </tr>
                                    <tr>
                                        <td>@Model.Payout.StartDate.Value.ToString("dddd dd MMM, yyyy")</td>
                                        <td>@Model.Payout.EndDate.Value.ToString("dddd dd MMM, yyyy")</td>

                                    </tr>
                                    <tr>
                                        <td colspan="2">
                                            10% of @Model.Payout.Amount = <strong style="font-weight:700">&#8358;@Model.Payout.PercentageAmount</strong>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                            <div class="clearfix"></div>
                            <div class="col-md-12">
                                <h6>
                                    <strong> Note:</strong> Wimbig will not be held responsible if you provided a wrong account details when requesting for withdrawal. its your responsibilty to ensure that you add correct data as indicated on our site instructions.
                                </h6>
                            </div>
                            <div class="clearfix"></div>
                            <div class="col-md-6 col-sm-6 col-xs-12 text-center">
                                <dl class="">
                                    <dt>
                                        Bank Name:
                                    </dt>

                                    <dd>
                                        ********
                                    </dd>
                                    <dt>
                                        Account Name:
                                    </dt>

                                    <dd>
                                        *********
                                    </dd>
                                    <dt>
                                        Account Number:
                                    </dt>

                                    <dd>
                                        00000000000000
                                    </dd>
                                </dl>
                                <button type="button" class="btn btn-round btn-success">Pay to Bank</button>

                            </div>
                            <div class="col-md-6 col-sm-6 col-xs-12 text-center">
                                <dl class="">
                                    <dt>
                                        Current Balance
                                    </dt>

                                    <dd>
                                        &#8358;@Model.Balance
                                    </dd>
                                    <dt>
                                        <i class="fa fa-arrow-down"></i>
                                    </dt>

                                    <dd>
                                        <i class="fa fa-arrow-down"></i>
                                    </dd>
                                    <dt>
                                        <i class="fa fa-arrow-down"></i>
                                    </dt>

                                    <dd>
                                        <i class="fa fa-arrow-down"></i>
                                    </dd>
                                </dl>

                                <form method="post">
                                    <input asp-for="Input.id" value="@Model.Payout.Id" type="hidden" id="" name="Input.id">
                                    <input asp-for="Input.UserId" value="@Model.Payout.UserId" type="hidden" id="" name="Input.UserId">
                                    <input asp-for="Input.Source" value="Wallet" type="hidden" id="" name="Input.Source">


                                    <button type="submit" class="btn btn-round btn-success">Pay to Wallet</button>
                                </form>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
