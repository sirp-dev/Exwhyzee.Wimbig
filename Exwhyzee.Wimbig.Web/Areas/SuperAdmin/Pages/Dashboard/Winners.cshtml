@page
@model Exwhyzee.Wimbig.Web.Areas.SuperAdmin.Pages.Dashboard.WinnersModel
@{
}

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel table-responsive">
            <div class="x_title">
                <h2>Wimbig Stakes (Total Winners [@Model.Tickets.Count()] <small></small></h2>

                <div class="clearfix"></div>
            </div>
            <div class="x_content">

                <table class="table dataTable table-striped jambo_table bulk_action" id="userDatable">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Raffle Id</th>
                            <th>Raffle Name</th>
                            <th>Ticket Number</th>
                            <th>Price (#)</th>
                            <th>Full Name</th>
                            <th>Phone</th>
                            <th>Sent To Lottery</th>
                            <th>Winner</th>
                            <th>Status</th>
                            <th>

                            </th>
                        </tr>
                    </thead>


                    <tbody>
                        @foreach (var item in Model.Tickets)
                        {
                            <tr>
                                <td>@item.PurchaseDate</td>
                                <td>@item.RaffleId</td>
                                <td>@item.RaffleName</td>
                                <td>@item.TicketNumber</td>
                                <td>@item.Price</td>
                                <td>@item.FullName</td>
                                <td>@item.PhoneNumber</td>
                                <td>@item.IsSentToStat</td>
                                <td>@item.IsWinner</td>
                                <td>@item.TicketStatus</td>
                                <td>Details</td>

                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript">
                $(document).ready(function () {
                    $("#userDatable").DataTable();
                });

    </script>
}
