@page
@model Exwhyzee.Wimbig.Web.Areas.SuperAdmin.Pages.WimBank.TopUpModel
@{
    var user = Model.LoggedInUser;
}

@using Exwhyzee.Wimbig.Web.Extensions.Enums

<!-- page content -->
<div class="right_col" role="main">
    <div class="">

        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel table-responsive">
                    <div class="x_title">
                        <h2>Top Up (@Model.Balance)</h2>

                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        @*asp-route-returnUrl="@Model.ReturnUrl"*@


                        <form class="form-horizontal form-label-left" enctype="multipart/form-data" method="post">


                            <input asp-for="addMoneyV.UserId" value="@Model.LoggedInUser" type="hidden" id="HostedBy" name="addMoneyV.UserId">

                            <div class="row">
                                <!--Raffle Properties-->
                                <div class="col-md-7 col-lg-7 col-sm-12 col-xs-12">
                                    <div class="item form-group">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">
                                            Amount <span class="required">*</span>
                                        </label>
                                        <div class="col-md-6 col-sm-6 col-xs-12">
                                            <input class="form-control col-md-7 col-xs-12" asp-for="addMoneyV.Amount" name="addMoneyV.Amount" placeholder="Enter name Amount" autofocus required="required" type="number">
                                        </div>
                                    </div>
                                    <div class="item form-group">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">
                                            Note <span class="required">*</span>
                                        </label>
                                        <div class="col-md-6 col-sm-6 col-xs-12">
                                            <input class="form-control col-md-7 col-xs-12" asp-for="addMoneyV.Note" name="addMoneyV.Note" placeholder="Enter name Amount" autofocus required="required" type="text">
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <div class="ln_solid"></div>
                            <div class="form-group">
                                <div class="col-md-6 col-md-offset-3">
                                    <button type="button" class="btn btn-primary" asp-route="/RaffleManagement/Index">Cancel</button>
                                    <button id="submit" type="submit" class="btn btn-success">Submit</button>
                                </div>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /page content -->
@section scripts{
    <!---->

}