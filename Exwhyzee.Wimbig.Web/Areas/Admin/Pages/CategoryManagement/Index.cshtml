@page
@model Exwhyzee.Wimbig.Web.Areas.Admin.Pages.CategoryManagement.IndexModel
@{
    ViewData["Title"] = "Category Management";
}

<!-- page content -->
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Category Management <small> </small></h3>
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel table-responsive">
                    <div class="x_title">
                        <h2>List Of Categories &nbsp; &nbsp; <a class="btn btn-sm btn-primary" asp-page="/CategoryManagement/CreateCategory"> Add a Category</a></h2>

                      
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <div class="table-responsive">
                            <table class="table dataTable table-striped jambo_table bulk_action" id="jtable">
                                <thead>
                                    <tr class="headings">

                                        <th class="column-title">Name </th>

                                        <th class="column-title">Description </th>
                                        <th class="column-title">Date Created </th>

                                        <th class="column-title">Action </th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Categories)
                                    {
                                        <tr class="even pointer">

                                            <td> @item.Name</td>
                                            <td> @item.Description</td>
                                            <td>@item.DateCreated.ToShortDateString()</td>                                        
                                            <td>
                                                <a asp-page="./EditCategories" class="btn btn-warning btn-xs" asp-route-id="@item.CategoryId">Edit Raffle</a>
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /page content -->
@section scripts{
    <script type="text/javascript">
        $('document').ready(function () {
            $('table').DataTable();
        });
      
    </script>
}
